<p id="notice"><%= notice %></p>
<div class="wrapper row2" style="min-height: 80vh;">
  <table class="table">
    <thead >
      <tr>
        <th style = "text-align:center">제목</th>
        <th style = "text-align:center">Content</th>
        <th style = "text-align:center">Person</th>
        <th style = "text-align:center">시작일</th>
        <th style = "text-align:center">마감일</th>
        <th style = "text-align:center">지역</th>
        <th style = "text-align:center">게시자</th>
        <th style = "text-align:center">Complete</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @serves.each do |serf| %>
        <tr>
          <td style = "text-align:center"><%= serf.title %></td>
          <td style = "text-align:center"><%= serf.content %></td>
          <td style = "text-align:center"><%= serf.person %></td>
          <td style = "text-align:center"><%= serf.start_date %></td>
          <td style = "text-align:center"><%= serf.end_data %></td>
          <td style = "text-align:center"><%= serf.location %></td>
          <td style = "text-align:center"><%= serf.user %></td>
          <td style = "text-align:center"><%= serf.complete %></td>
          <td><%= link_to 'Show', serf%></td>
          <td><%= link_to 'Edit', edit_serf_path(serf) if serf.updatable_by? current_user%></td>
          <td><%= link_to 'Destroy', serf, method: :delete, data: { confirm: 'Are you sure?' } if serf.deletable_by? current_user%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>
  
  <%= link_to 'New Serf', new_serf_path %>
</div>
