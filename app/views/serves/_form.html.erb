
<%= simple_form_for(@serf) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">

    <%= f.input :title %>

    <%= f.input :content %>

    <%= f.input :person %>

    <%= f.input :start_date %>

    <%= f.input :end_data %>

    <%= f.input :location %>

    <%= f.association :user %>

    <%= f.input :complete %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
