<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <%if @post_type == 1%>
      <h2>농가 찾기 글 쓰기</h2>
    <%else%>
      <h2>봉사 희망 글 쓰기</h2>
    <%end%>
    <div class="row">
      <div class='col-md-12'>
        <p style='text-align:right;'>
          created by <%= current_user.email %>, Current Time : <%= Time.now %>
        </p>
      </div>
    </div>
    
    <%= render 'form', post: @post %>
  </div>
</div>