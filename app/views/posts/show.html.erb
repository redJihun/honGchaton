<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content.html_safe %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user.name %>
</p>

<%if @post.id == current_user.id%> #글 작성자라면
  <button type="button" onclick="toggle();">모집 완료</button>
  <%= link_to 'Edit', edit_post_path(@post) %> |
<%end%>

<%= link_to 'Back', posts_path %>

<script>
  function toggle(){
    <% @post.complete = !(@post.complete) %>
    <% @post.save %>
    alert(<%=@post.complete%>);
  }
</script>