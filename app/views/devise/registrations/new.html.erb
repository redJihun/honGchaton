


<div class = "wrapper row2" style = "margin: 5vh 75vh; width: 50vh;">
  <h2>Sign up</h2>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
  
    <div class="form-group">
      <%= f.input :name, required: true, autofocus: true, input_html: { class: 'form-control' } %>
    </div>
    <div class="form-group">
      <%= f.input :phone, required: true, autofocus: true, input_html: { class: 'form-control' } %>
    </div>
    <div class="form-group">
      <%= f.input :email, required: true, autofocus: true, input_html: { class: 'form-control' } %>
    </div>
    <div class="form-group">
      <%= f.input :password, required: true, input_html: { class: 'form-control' } %>
    </div>
    <div class="form-group">
      <%= f.input :password_confirmation, required: true, input_html: { class: 'form-control' } %>
    </div>
  
    <div class="checkbox" id="checkbox1">
      <label><input type="checkbox"> 농가이신가요?</label>
    </div>
    <div id="autoUpdate" class="autoUpdate" style="display:none">
    <%# 농가 입력폼 name, farm_type, admin, location%>
      <div class="form-group"> 
        농가이름
        <%= text_field_tag 'name', '', :class => 'form-control' %>
      </div>
  
      <div class="form-group">
        농업종류
        <%= text_field_tag 'farm_type', '', :class => 'form-control' %>
      </div>
  
      <div class="form-group">
        담당기관
        <%= text_field_tag 'admin', '', :class => 'form-control' %>
      </div>
  
      <div class="form-group">
        농가위치
        <%= text_field_tag 'location', '', :class => 'form-control' %>
      </div>
    </div>
  
  
    <%= f.button :submit, "Sign up", class: "btn btn-default" %>
  <% end %>
  
  
  <script>
   $(document).ready(function () {
      $('#checkbox1').change(function () {
        $('#autoUpdate').fadeToggle();
      });
  });
  </script>
</div>